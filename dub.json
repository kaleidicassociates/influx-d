{
    "name": "influx-d",
    "authors": [
        "Atila Neves",
        "Ilya Yaroshenko"
    ],
    "dependencies": {
        "vibe-d:http": "~>0.8.0",
        "asdf": ">=0.1.1 <0.6.0"
    },
    "description": "InfluxDB wrapper",
    "copyright": "Copyright Â© 2017, Kaleidic Associates Advisory Limited",
    "license": "BSD 3-clause",
    "targetType": "library",
    "sourcePaths": ["source"],
    "versions": ["unitUnthreaded"],

    "configurations": [

        {"name": "library" },
        {
            "name": "library-ssl-1.1",
            "libs-posix": [
                ":libssl.so.1.0.0",
                ":libcrypto.so.1.0.0"
            ]
        },

        {
            "name": "unittest",
            "targetType": "executable",
            "targetName": "bin/ut",
            "mainSourceFile": "bin/ut.d",
            "dependencies": {
                "unit-threaded": "*"
            }
        },

        {
            "name": "unittest-ssl-1.1",
            "targetType": "executable",
            "targetName": "bin/ut",
            "mainSourceFile": "bin/ut.d",
            "dependencies": {
                "unit-threaded": "*"
            },
            "libs-posix": [
                ":libssl.so.1.0.0",
                ":libcrypto.so.1.0.0"
            ]
        },

        {
            "name": "integration",
            "targetType": "executable",
            "targetName": "bin/it",
            "sourcePaths": ["source", "integration"],
            "dependencies": {
                "unit-threaded": "*"
            }

        },

        {
            "name": "integration-mir",
            "targetType": "executable",
            "targetName": "bin/it",
            "sourcePaths": ["source", "integration"],
            "dependencies": {
                "unit-threaded": "*",
                "mir-algorithm": ">=3.3.11 <4.0.0"
            }

        },

        {
            "name": "integration-ssl-1.1",
            "targetType": "executable",
            "targetName": "bin/it",
            "sourcePaths": ["source", "integration"],
            "dependencies": {
                "unit-threaded": "*",
                "mir-algorithm": ">=3.3.11 <4.0.0"
            },
            "libs-posix": [
                "ssl",
                "crypto",
                ":libssl.so.1.0.0",
                ":libcrypto.so.1.0.0"
            ]
        }
    ]

}
